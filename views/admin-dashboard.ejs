<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/admin.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Admin Dashboard</title>
</head>
<body class="min-h-screen bg-gray-900 text-white">
  <div class="max-w-4xl mx-auto py-12">
    <h1 class="text-4xl font-bold mb-6">Welcome, admin ğŸ‘‹</h1>
    <p class="mb-4 text-gray-300">You are logged in as <strong>admin</strong>.</p>
    <form action="/admin/logout" method="POST">
      <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Logout</button>
    </form>

    <section class="mt-8">
      <h2 class="text-2xl font-semibold mb-2">ğŸ“¬ Contact Submissions</h2>
      <% if (contacts.length === 0) { %>
        <p class="text-gray-400">No contact submissions yet.</p>
      <% } else { %>
        <ul class="space-y-4">
          <% contacts.forEach(contact => { %>
            <li class="bg-gray-800 p-4 rounded shadow">
              <p><strong>Name:</strong> <%= contact.name %></p>
              <p><strong>Email:</strong> <%= contact.email %></p>
              <p><strong>Message:</strong> <%= contact.message %></p>
              <p class="text-gray-500 text-sm">Submitted: <%= contact.created_at %></p>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </section>
  </div>
</body>
</html>